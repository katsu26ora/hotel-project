<h1>お問い合わせ</h1>

<%= form_with(model: @contact, local: true) do |form| %>
<!-- name -->
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :contact_name %>
  </div>
<!-- email -->
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :contact_email %>
  </div>

<!-- phone -->
  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :contact_phone %>
  </div>

<!-- description -->
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :contact_body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>